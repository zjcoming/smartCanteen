<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/buy_mode_dialog_wechat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="center"
            android:src="@drawable/confirm_order_buy_mode_wechat"
            />

        <TextView
            android:id="@+id/buy_mode_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:padding="20dp"
            android:paddingTop="20dp"
            android:text="微信付款"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buy_mode_dialog_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="center"
            android:src="@drawable/confirm_order_buy_mode_zhifubao"
            />
        <TextView
            android:id="@+id/buy_mode_zhifubao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:paddingTop="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:text="支付宝付款"
            android:textColor="@color/blue"/>
    </LinearLayout>
</LinearLayout>